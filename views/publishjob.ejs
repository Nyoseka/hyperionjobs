<h1 class="form-title">Publicar un trabajo</h1>
  <form action="" method="POST">
    <label for="title">Título del trabajo</label>
    <input type="text" id="title" name="title" required>

    <label for="description">Descripción del trabajo</label>
    <textarea id="description" name="description" required></textarea>

    <label for="requirements">Requerimientos</label>
    <textarea id="requirements" name="requirements" required></textarea>

    <label for="location">Ubicación</label>
    <input type="text" id="location" name="location" required>

    <label for="salary">Salario</label>
    <input type="number" id="salary" name="salary" required>

    <label for="company">Nombre de la compañía</label>
    <input type="text" id="company" name="company" required>

    <label for="company_logo_url">Logotipo de la compañía (URL)</label>
    <input type="text" id="company_logo" name="company_logo" required>

    <label for="posted_date">Fecha de publicación</label>
    <input type="text" id="publish_date" name="publish_date" required>

    <label for="deadline">Fecha límite para aplicar</label>
    <input type="text" id="dead_line" name="dead_line" required>

    <button type="submit">Submit</button>
  </form>
